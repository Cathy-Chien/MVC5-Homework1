@model IEnumerable<Homework.Models.客戶聯絡人>

@{
    ViewBag.Title = "Details_聯絡人清單";
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm("BatchUpdate", "客戶資料"))
{
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.職稱)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.姓名)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.手機)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.電話)
        </th>
    </tr>

    @{
        var contact = Model.ToArray();
    }

    @for (int i = 0; i < contact.Length; i++)
    {
        @Html.HiddenFor(modelItem => contact[i].Id)
        @Html.HiddenFor(modelItem => contact[i].客戶Id)
        <tr>
            <td>
                @* <input type="text" name="[0].職稱" value='@data[i].職稱' />*@
                @Html.EditorFor(modelItem => contact[i].職稱, new { Name = "data.職稱" })
                @Html.ValidationMessageFor(model => contact[i].職稱, "", new { @class = "text-danger" })
            </td>
            <td>
                @Html.DisplayFor(modelItem => contact[i].姓名)
            </td>
            <td>
                @Html.DisplayFor(modelItem => contact[i].Email)
            </td>
            <td>
                @Html.EditorFor(modelItem => contact[i].手機)
                @Html.ValidationMessageFor(model => contact[i].手機, "", new { @class = "text-danger" })
            </td>
            <td>
                @Html.EditorFor(modelItem => contact[i].電話)
                @Html.ValidationMessageFor(model => contact[i].電話, "", new { @class = "text-danger" })
            </td>
        </tr>
    }

</table>

    <input type="submit" />

}
