@model IEnumerable<Homework.Models.客戶資料>

@{
    ViewBag.Title = "Index";
}

<h2>客戶資料</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm("Search", "客戶資料", FormMethod.Get, null))
{
    <div class="form-group">
        @Html.TextBox("keyword", null, new { placeholder = "請輸入關鍵字" })
        <input type="submit" />
    </div>
    <div class="form-group">
        @Html.DropDownList("客戶分類Id", null, htmlAttributes: new { @class = "form-control", onchange = "this.form.submit();" })
    </div>
}
@using (Html.BeginForm("Export", "客戶資料", FormMethod.Post))
{
    <input type="submit" value="Export" />
}
<table class="table">
    <tr>
        <th>
            @Html.ActionLink(Html.DisplayNameFor(model => model.客戶名稱).ToHtmlString(), "Index", new { sortOrder = ViewBag.客戶名稱Sort })
        </th>

        <th>
            @Html.ActionLink(Html.DisplayNameFor(model => model.帳號).ToHtmlString(), "Index")
        </th>

        <th>
            @Html.ActionLink(Html.DisplayNameFor(model => model.客戶類別.客戶分類).ToHtmlString(), "Index", new { sortOrder = ViewBag.客戶類別Sort })
        </th>
        <th>
            @Html.ActionLink(Html.DisplayNameFor(model => model.統一編號).ToHtmlString(), "Index", new { sortOrder = ViewBag.統一編號Sort })
        </th>
        <th>
            @Html.ActionLink(Html.DisplayNameFor(model => model.電話).ToHtmlString(), "Index", new { sortOrder = ViewBag.電話Sort })
        </th>
        <th>
            @Html.ActionLink(Html.DisplayNameFor(model => model.傳真).ToHtmlString(), "Index", new { sortOrder = ViewBag.傳真Sort })
        </th>
        <th>
            @Html.ActionLink(Html.DisplayNameFor(model => model.地址).ToHtmlString(), "Index", new { sortOrder = ViewBag.地址Sort })
        </th>
        <th>
            @Html.ActionLink(Html.DisplayNameFor(model => model.Email).ToHtmlString(), "Index", new { sortOrder = ViewBag.EmailSort })
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.客戶名稱)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.帳號)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.客戶類別.客戶分類)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.統一編號)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.電話)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.傳真)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.地址)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
    }

</table>
